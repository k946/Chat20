<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/addfrined_rl_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addfriend_btn_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="125dp"
            android:text="拒绝" />

        <Button
            android:id="@+id/addfriend_btn_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/addfriend_btn_false"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="287dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="9dp"
            android:text="同意" />

        <TextView
            android:id="@+id/addfriend_textView"
            android:layout_width="112dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/addfriend_tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-43dp"
            android:layout_toStartOf="@+id/addfriend_btn_false"
            android:text="已同意添加好友"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/addfriend_tv_refuse"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="11dp"
            android:text="已拒绝添加好友"
            android:visibility="invisible" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>